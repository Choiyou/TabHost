<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/tab1"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="중고거래"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:gravity="center|center_vertical"
                        android:layout_marginTop="15dp"
                        android:textColor="#000000">
                    </TextView>
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">
                        <TableRow>
                            <Button
                                android:text="디지털/가전"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_digital"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn1"
                                android:background="@android:color/transparent"/>
                            <Button
                                android:text="가구/인테리어"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_furniture"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn2"
                                android:background="@android:color/transparent"/>
                            <Button
                                android:text="유아동/유아도서"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_baby"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn3"
                                android:background="@android:color/transparent"/>
                        </TableRow>
                        <TableRow>
                            <Button
                                android:text="생활/가공식품"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_food"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn4"
                                android:background="@android:color/transparent"/>
                            <Button
                                android:text="여성의류"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_womancloths"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn5"
                                android:background="@android:color/transparent"/>
                            <Button
                                android:text="여성잡화"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_womanstuff"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn6"
                                android:background="@android:color/transparent"/>
                        </TableRow>
                        <TableRow>
                            <Button
                                android:text="뷰티/미용"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_beauty"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn7"
                                android:background="@android:color/transparent"/>
                            <Button
                                android:text="남성패션/잡화"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_man"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn8"
                                android:background="@android:color/transparent"/>
                            <Button
                                android:text="스포츠/레저"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_sports"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn9"
                                android:background="@android:color/transparent"/>
                        </TableRow>
                        <TableRow>
                            <Button
                                android:text="게임/취미"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_game"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn10"
                                android:background="@android:color/transparent"/>
                            <Button
                                android:text="도서/티켓/음반"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_books"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn11"
                                android:background="@android:color/transparent"/>
                            <Button
                                android:text="반려동물용품"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_dog"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn12"
                                android:background="@android:color/transparent"/>
                        </TableRow>
                        <TableRow>
                            <Button
                                android:text="기타 중고물품"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_used"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn13"
                                android:background="@android:color/transparent"
                                />
                            <Button
                                android:text="삽니다"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_buy"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn14"
                                android:background="@android:color/transparent"/>
                            <Button
                                android:text="무료나눔/대여"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/category_free"
                                android:drawablePadding="18dp"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:id="@+id/btn15"
                                android:background="@android:color/transparent"/>
                        </TableRow>


                    </TableLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab3"
                    android:gravity="center"
                    android:weightSum="1"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_weight="0.1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <Button
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/write_camera"
                            android:layout_gravity=""
                            android:background="#FFFFFF"
                            android:id="@+id/photo_add"
                            android:text="사진 첨부"/>
                        <Button
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="카테고리 선택>"
                            android:background="#AAAAAA"
                            android:id="@+id/category_select"
                            />
                        <Button
                            android:layout_weight="1"
                            android:text="완료"
                            android:id="@+id/OK_btn"
                            android:background="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="#ABDDF2"
                        android:layout_width="match_parent"
                        android:weightSum="5"
                        android:layout_weight="0.15"
                        android:layout_height="0dp">
                        <ImageView
                            android:id="@+id/itemImg1"
                            android:layout_margin="0.2dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:background="#FFFFFF"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:id="@+id/itemImg2"
                            android:layout_margin="0.2dp"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_margin="0.2dp"
                            android:background="#FFFFFF"
                            android:id="@+id/itemImg3"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_margin="0.2dp"
                            android:id="@+id/itemImg4"
                            android:background="#FFFFFF"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_margin="0.2dp"
                            android:id="@+id/itemImg5"
                            android:background="#FFFFFF"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <EditText
                        android:layout_weight="0.1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:hint="제목"
                        android:id="@+id/edtTitle"/>
                    <EditText
                        android:layout_weight="0.1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:inputType="number"
                        android:hint="가격 입력(선택사항)"
                        android:id="@+id/edtPrice"/>
                    <EditText
                        android:layout_weight="0.55"
                        android:layout_width="match_parent"
                        android:gravity="top"
                        android:layout_height="0dp"
                        android:hint="지역에 올릴 게시글 내용을 작성해주세요.\n(가품 및 판매금지품목은게시가 제한될수 있습니다."
                        android:inputType="textMultiLine"
                        android:id="@+id/edtContents" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab4"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    >
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/Signin"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회원가입"/>
                    <Button
                        android:id="@+id/login"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="로그인"/>
                </LinearLayout>

                        <TextView

                            android:id="@+id/loginInfo"
                            android:background="#ffffff"
                            android:paddingLeft="18dp"
                            android:drawableLeft="@drawable/personinfo_person"
                            android:drawablePadding="18dp"
                            android:gravity="center|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비회원 입니다.">

                        </TextView>



                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TableRow>
                            <Button
                                android:background="@android:color/transparent"
                                android:id="@+id/btnSales"
                                android:paddingLeft="18dp"
                                android:drawableLeft="@drawable/personinfo_sales"
                                android:drawablePadding="18dp"
                                android:gravity="left|center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="판매 내역"
                                />
                            <Button
                                android:background="@android:color/transparent"
                                android:id="@+id/btnPurchase"
                                android:paddingLeft="18dp"
                                android:drawableLeft="@drawable/personinfo_purchase"
                                android:drawablePadding="18dp"
                                android:gravity="left|center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="구매 내역"/>
                        </TableRow>
                        <TableRow>
                            <Button
                                android:background="@android:color/transparent"
                                android:id="@+id/btnlikeProduct"
                                android:paddingLeft="18dp"
                                android:drawableLeft="@drawable/personinfo_likeproduct"
                                android:drawablePadding="18dp"
                                android:gravity="left|center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="관심상품"/>
                            <Button
                                android:background="@android:color/transparent"
                                android:id="@+id/btnMyPosts"
                                android:paddingLeft="18dp"
                                android:drawableLeft="@drawable/personinfo_myposts"
                                android:drawablePadding="18dp"
                                android:gravity="left|center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="내 게시글"/>
                        </TableRow>
                        <TableRow>
                            <Button
                                android:background="@android:color/transparent"
                                android:id="@+id/btntownSetting"
                                android:paddingLeft="18dp"
                                android:drawableLeft="@drawable/personinfo_townsetting"
                                android:drawablePadding="18dp"
                                android:gravity="left|center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="동네 설정"/>
                            <Button
                                android:background="@android:color/transparent"
                                android:id="@+id/btnKeyword"
                                android:paddingLeft="18dp"
                                android:drawableLeft="@drawable/personinfo_keyword"
                                android:drawablePadding="18dp"
                                android:gravity="left|center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="키워드 알림"/>
                        </TableRow>
                    </TableLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab5"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical">


                </LinearLayout>

            </FrameLayout>
            <TabWidget
                android:id="@android:id/tabs"
                android:background="#ABDDF2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TabWidget>
        </LinearLayout>
    </TabHost>
</LinearLayout>