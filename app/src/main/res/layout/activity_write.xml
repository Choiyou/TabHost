<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_height="0dp">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/write_camera"
            android:background="#FFFFFF"
            android:id="@+id/photo_add"
            android:text="사진 첨부"/>
        <Button
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="카테고리 선택>"
            android:background="#AAAAAA"
            android:id="@+id/category_select"
            />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/Mapcheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:gravity="top|center"
                android:text="위치 표시" />
        </RelativeLayout>

        <Button
            android:layout_weight="1"
            android:text="완료"
            android:id="@+id/OK_btn"
            android:background="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#ABDDF2"
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_weight="0.15"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/itemImg1"
            android:layout_margin="0.2dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/itemImg2"
            android:layout_margin="0.2dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_margin="0.2dp"
            android:background="#FFFFFF"
            android:id="@+id/itemImg3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_margin="0.2dp"
            android:id="@+id/itemImg4"
            android:background="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_margin="0.2dp"
            android:id="@+id/itemImg5"
            android:background="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <EditText
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="제목"
        android:id="@+id/edtTitle"/>
    <EditText
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="number"
        android:hint="가격 입력(선택사항)"
        android:id="@+id/edtPrice"/>
    <EditText
        android:layout_weight="0.55"
        android:layout_width="match_parent"
        android:gravity="top"
        android:layout_height="0dp"
        android:hint="지역에 올릴 게시글 내용을 작성해주세요.\n(가품 및 판매금지품목은게시가 제한될수 있습니다."
        android:inputType="textMultiLine"
        android:id="@+id/edtContents" />


</LinearLayout>
